
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AAAAAAAAAAA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AAAAAAAAAAA.styles.css" asp-append-version="true" />
</head>
<body onload="displayImage()">
    <div id="container">
        <div id="banner">
            <h1 id="logo">e-Commerce</h1>
            <div id="login">
                <partial name="_LoginPartial" />
            </div>
        </div>
        <div id="navigation-container">
            <ul id="navButtons">
                <li><a class="nav-link text-dark" asp-area="" asp-page="/Index">Homepage</a></li>
                <li><a class="nav-link text-dark" asp-area="" asp-page="/Products">Products</a></li>
                <li><a class="nav-link text-dark" asp-area="" asp-page="/AboutUs">About Us</a></li>
                <li><a class="nav-link text-dark" asp-area="" asp-page="/LoginPage">Login</a></li>
                <li><a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a></li>
                <li><a class="nav-link text-dark" asp-area="" asp-page="/Cart">Cart</a></li>
                @if (User.IsInRole("Admin") || User.IsInRole("superAdmin"))
                {
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/addProduct">Add Products</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/adminPage">Admin Page</a></li>
                }
            </ul>
            <form id="searchBar">
                <label for="search"></label>
                <input type="text" asp-page-handler="Search" placeholder="Search">  @* id="search" name="search" *@
                <input type="submit" value="Search">
            </form>
        </div>

        <div class="containerMainContent">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <div class="containerFooter">
            &copy; 2024 - E-Commerce - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>